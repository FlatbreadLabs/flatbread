{
  "name": "@flatbread/source-filesystem",
  "version": "1.0.0-alpha.7",
  "description": "Filesystem source for Flatbread",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonyketcham/flatbread.git",
    "directory": "packages/source-filesystem"
  },
  "homepage": "https://github.com/tonyketcham/flatbread/tree/main/packages/source-filesystem#readme",
  "author": "Tony Ketcham <ketcham.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tonyketcham/flatbread/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "to-vfile": "^7.2.3",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@flatbread/core": "workspace:*",
    "@types/node": "16.11.45",
    "tsup": "6.1.3",
    "typescript": "4.7.4",
    "vfile": "5.3.4"
  }
}
