{
  "name": "@flatbread/playground",
  "private": true,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonyketcham/flatbread.git",
    "directory": "playground"
  },
  "author": "Tony Ketcham <ketcham.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tonyketcham/flatbread/issues"
  },
  "scripts": {
    "flat": "flatbread start",
    "dev": "flatbread start -- svelte-kit dev",
    "flatbread:help": "flatbread start -h",
    "build": "flatbread start -- svelte-kit build",
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "transpile": "tsc --watch",
    "withnpm": "flatbread start -X npm -- -h"
  },
  "devDependencies": {
    "@flatbread/transformer-yaml": "workspace:*",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "autoprefixer": "10.4.7",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-svelte3": "3.4.1",
    "flatbread": "workspace:*",
    "graphql": "16.5.0",
    "graphql-helix": "1.9.1",
    "prettier": "2.4.1",
    "prettier-plugin-svelte": "2.4.0",
    "svelte": "3.49.0",
    "svelte-check": "2.2.8",
    "svelte-preprocess": "4.10.7",
    "tailwindcss": "3.1.6",
    "tslib": "2.3.1",
    "typescript": "4.7.4",
    "vite-plugin-transform": "1.1.3"
  },
  "type": "module"
}
