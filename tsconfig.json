{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "oyu": ["./packages/oyu/src/index.ts"],
      "@oyu/core": ["./packages/core/src/index.ts"],
      "@oyu/config": ["./packages/config/src/index.ts"],
      "@oyu/source-filesystem": ["./packages/source-filesystem/src/index.ts"],
      "@oyu/transformer-markdown": [
        "./packages/transformer-markdown/src/index.ts"
      ]
    }
  },
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
